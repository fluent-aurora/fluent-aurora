<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ic="using:FluentIcons.Avalonia.Fluent"
             xmlns:converters="using:FluentAurora.Converters"
             xmlns:controls="using:FluentAurora.Controls"
             xmlns:vm="clr-namespace:FluentAurora.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="FluentAurora.Controls.ExpandedPlayer"
             x:Name="ExpandedPlayerRoot">
    <Design.DataContext>
        <vm:ExpandedPlayerViewModel />
    </Design.DataContext>
    <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}">
        <Grid RowDefinitions="Auto,*,Auto,Auto" Margin="40,10,40,20">
            <!-- Header with close button -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20" ZIndex="1000">
                <TextBlock Grid.Column="0"
                           Text="Now Playing"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Opacity="0.7"
                           VerticalAlignment="Center" />

                <Button Grid.Column="1"
                        Width="40"
                        Height="32"
                        Command="{Binding ToggleExpandCommand}"
                        ToolTip.Tip="Minimize Player">
                    <ic:SymbolIcon Symbol="ChevronDown" FontSize="16" />
                </Button>
            </Grid>

            <!-- Current Song and Song Queue -->
            <Grid Grid.Row="1">
                <!-- Album Art and Info (Currently Playing Song) -->
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Spacing="30"
                            IsVisible="{Binding !IsQueueVisible}">
                    <!-- Large Album Art with shadow -->
                    <Grid HorizontalAlignment="Center"
                          Width="400"
                          Height="400">
                        <!-- Ambient background visualizer -->
                        <controls:ReactiveArtwork x:Name="AmbientVisualizer"
                                                  SourceImage="{Binding SongArtwork}"
                                                  IsActive="{Binding IsReactiveArtworkEnabled}"
                                                  BaseScale="{Binding ReactiveArtworkBaseScale}"
                                                  MaxScale="{Binding ReactiveArtworkMaxScale}">
                            <controls:ReactiveArtwork.PlaceholderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Color="#FF3D3D3D" Offset="0" />
                                    <GradientStop Color="#FF2D2D2D" Offset="1" />
                                </LinearGradientBrush>
                            </controls:ReactiveArtwork.PlaceholderBrush>
                        </controls:ReactiveArtwork>

                        <!-- Album Art on top -->
                        <!-- TODO: Make it switchable between visualizer and static artwork -->
                        <Border CornerRadius="12"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                BoxShadow="0 8 32 0 #30000000"
                                ClipToBounds="True"
                                IsVisible="False">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Color="#FF3D3D3D" Offset="0" />
                                    <GradientStop Color="#FF2D2D2D" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <!-- Placeholder icon (No Artwork) -->
                                <ic:SymbolIcon Symbol="MusicNote2"
                                               FontSize="64"
                                               Opacity="0.3"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding SongArtwork, Converter={x:Static ObjectConverters.IsNull}}" />

                                <!-- Artwork -->
                                <Image Source="{Binding SongArtwork}"
                                       Stretch="UniformToFill"
                                       RenderOptions.BitmapInterpolationMode="HighQuality" />
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Song Info -->
                    <StackPanel HorizontalAlignment="Center" Spacing="12" MaxWidth="500">
                        <controls:ScrollingTextBlock Text="{Binding SongTitle, FallbackValue='No Track Playing'}"
                                                     CenterText="True"
                                                     ShowToolTip="True"
                                                     FontWeight="Bold"
                                                     FontSize="28"
                                                     PauseBeforeScroll="3000"
                                                     ScrollSpeed="25"
                                                     ScrollGap="80"
                                                     MaxWidth="500" />

                        <controls:ScrollingTextBlock Text="{Binding SongArtist, FallbackValue='Unknown Artist'}"
                                                     CenterText="True"
                                                     ShowToolTip="True"
                                                     FontWeight="SemiBold"
                                                     FontSize="20"
                                                     Opacity="0.8"
                                                     PauseBeforeScroll="3000"
                                                     ScrollSpeed="25"
                                                     ScrollGap="80"
                                                     MaxWidth="500" />

                        <controls:ScrollingTextBlock Text="{Binding SongAlbum, FallbackValue='Unknown Album'}"
                                                     CenterText="True"
                                                     ShowToolTip="True"
                                                     FontSize="16"
                                                     Opacity="0.6"
                                                     PauseBeforeScroll="3000"
                                                     ScrollSpeed="25"
                                                     ScrollGap="80"
                                                     MaxWidth="500" />
                    </StackPanel>
                </StackPanel>

                <!-- Song Queue -->
                <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
                        Opacity="0.97"
                        IsVisible="{Binding IsQueueVisible}"
                        CornerRadius="12"
                        Padding="20,10"
                        Margin="0,10,0,0">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Header -->
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,12">
                            <TextBlock Text="Queue"
                                       FontSize="18"
                                       FontWeight="SemiBold"
                                       Opacity="0.8"
                                       VerticalAlignment="Center" />
                            <Button Grid.Column="1"
                                    Command="{Binding ToggleQueueCommand}"
                                    ToolTip.Tip="Close Queue">
                                <ic:SymbolIcon Symbol="Dismiss" FontSize="16" />
                            </Button>
                        </Grid>

                        <!-- Song List -->
                        <ListBox Grid.Row="1"
                                 x:Name="QueueListBox"
                                 ItemsSource="{Binding QueueItems}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Padding="0"
                                 Margin="0,0,14,0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 SelectionMode="Single">

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0,2,12,2" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="CornerRadius" Value="6" />
                                </Style>
                                <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                                <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                                <Style Selector="ListBoxItem:selected">
                                    <Setter Property="Background" Value="Transparent" />
                                </Style>
                            </ListBox.Styles>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="8,6"
                                            CornerRadius="6"
                                            Cursor="Hand"
                                            Background="{Binding IsCurrentlyPlaying, Converter={x:Static converters:QueueBoolToBackgroundConverter.Instance}}"
                                            PointerPressed="OnQueueItemPointerPressed">
                                        <Border.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuItem Header="Remove Song"
                                                          Command="{Binding DataContext.RemoveSongCommand, ElementName=ExpandedPlayerRoot}"
                                                          CommandParameter="{Binding}">
                                                    <MenuItem.Icon>
                                                        <ic:SymbolIcon Symbol="Delete" />
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </MenuFlyout>
                                        </Border.ContextFlyout>

                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Icon -->
                                            <Border Grid.Column="0"
                                                    Width="40" Height="40"
                                                    CornerRadius="6"
                                                    Background="#FF2D2D2D"
                                                    Margin="0,0,12,0">
                                                <Grid>
                                                    <!-- Not playing icon -->
                                                    <ic:SymbolIcon Symbol="MusicNote2"
                                                                   FontSize="18"
                                                                   Opacity="0.5"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding !IsCurrentlyPlaying}" />

                                                    <!-- Playing icon -->
                                                    <ic:SymbolIcon Symbol="SoundWaveCircle"
                                                                   FontSize="18"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   IsVisible="{Binding IsCurrentlyPlaying}" />
                                                </Grid>
                                            </Border>

                                            <!-- Title/Artist -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Title}"
                                                           FontSize="14"
                                                           TextTrimming="CharacterEllipsis" />
                                                <TextBlock Text="{Binding Artist}"
                                                           FontSize="12"
                                                           Opacity="0.7"
                                                           TextTrimming="CharacterEllipsis" />
                                            </StackPanel>

                                            <!-- Duration -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding Duration, Converter={x:Static converters:PositionToTimeConverter.Instance}}"
                                                       FontSize="12"
                                                       Opacity="0.6"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Margin="8,0,0,0" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Progress Section -->
            <StackPanel Grid.Row="2" Spacing="8" Margin="0,20,0,0">
                <!-- Progress Bar -->
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                    <TextBlock Grid.Column="0"
                               FontSize="13"
                               FontWeight="Medium"
                               Opacity="0.8"
                               VerticalAlignment="Center"
                               MinWidth="45"
                               Text="{Binding DisplayPosition, Converter={x:Static converters:PositionToTimeConverter.Instance}}" />

                    <Slider Grid.Column="1"
                            x:Name="ExpandedProgressSlider"
                            Minimum="0"
                            Maximum="{Binding SongDuration}"
                            Value="{Binding DisplayPosition, Mode=TwoWay}"
                            UseLayoutRounding="False"
                            VerticalAlignment="Center">
                        <ToolTip.Tip>
                            <StackPanel>
                                <TextBlock Text="{Binding DisplayPosition, Converter={x:Static converters:PositionToTimeConverter.Instance}}"
                                           FontWeight="SemiBold" />
                                <TextBlock Text="Click or drag to seek"
                                           FontSize="11"
                                           Opacity="0.7" />
                            </StackPanel>
                        </ToolTip.Tip>
                    </Slider>

                    <TextBlock Grid.Column="2"
                               FontSize="13"
                               FontWeight="Medium"
                               Opacity="0.8"
                               VerticalAlignment="Center"
                               MinWidth="45"
                               Text="{Binding SongDuration, Converter={x:Static converters:PositionToTimeConverter.Instance}}" />
                </Grid>
            </StackPanel>

            <!-- Controls Section -->
            <StackPanel Grid.Row="3"
                        HorizontalAlignment="Center"
                        Spacing="24"
                        Margin="0,20,0,0">

                <!-- Main Playback Controls -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Spacing="16">

                    <!-- Shuffle -->
                    <Button Width="44"
                            Height="44"
                            ToolTip.Tip="Shuffle"
                            Command="{Binding ToggleShuffleCommand}">
                        <ic:SymbolIcon Symbol="{Binding ShuffleIcon}" FontSize="20" />
                    </Button>

                    <!-- Previous -->
                    <Button Width="48"
                            Height="48"
                            ToolTip.Tip="Previous Track"
                            Command="{Binding PreviousTrackCommand}">
                        <ic:SymbolIcon Symbol="Previous" FontSize="20" />
                    </Button>

                    <!-- Play/Pause -->
                    <Button Command="{Binding TogglePlayCommand}"
                            Width="64"
                            Height="64"
                            CornerRadius="32">
                        <ic:SymbolIcon Symbol="{Binding PlayPauseIcon}" FontSize="28" />
                    </Button>

                    <!-- Next -->
                    <Button Width="48"
                            Height="48"
                            ToolTip.Tip="Next Track"
                            Command="{Binding NextTrackCommand}">
                        <ic:SymbolIcon Symbol="Next" FontSize="20" />
                    </Button>

                    <!-- Repeat -->
                    <Button Width="44"
                            Height="44"
                            Command="{Binding ToggleRepeatCommand}">
                        <ic:SymbolIcon Symbol="{Binding RepeatIcon}" FontSize="20" />
                    </Button>
                </StackPanel>

                <!-- Secondary Controls -->
                <Border Background="{DynamicResource ControlFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16,12">
                    <Grid ColumnDefinitions="Auto,*,Auto">

                        <!-- Left controls -->
                        <StackPanel Grid.Column="0"
                                    Orientation="Horizontal"
                                    Spacing="12">
                            <Button ToolTip.Tip="Show Queue"
                                    Command="{Binding ToggleQueueCommand}">
                                <ic:SymbolIcon Symbol="List" FontSize="18" />
                            </Button>
                        </StackPanel>

                        <!-- Center spacing -->
                        <Panel Grid.Column="1" />

                        <!-- Volume Control -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    Spacing="10">
                            <Button Command="{Binding ToggleMuteCommand}" ToolTip.Tip="Mute/Unmute">
                                <ic:SymbolIcon Symbol="{Binding VolumeIcon}" FontSize="18" />
                            </Button>

                            <Slider Width="120"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="{Binding CurrentVolume}"
                                    UseLayoutRounding="False"
                                    VerticalAlignment="Center">
                                <ToolTip.Tip>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Volume: {0:F0}%">
                                                <Binding Path="CurrentVolume" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </ToolTip.Tip>
                            </Slider>

                            <TextBlock Text="{Binding CurrentVolume, StringFormat='{}{0:F0}%'}"
                                       FontSize="12"
                                       MinWidth="35"
                                       Opacity="0.7"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>