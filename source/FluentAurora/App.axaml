<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:style="using:FluentAvalonia.Styling"
             x:Class="FluentAurora.App"
             xmlns:local="using:FluentAurora"
             RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <style:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
    </Application.Styles>
</Application>